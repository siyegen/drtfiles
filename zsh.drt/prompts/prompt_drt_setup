# Load dependencies.
pmodload 'helper'

function prompt_drt_pwd {
  local pwd="${PWD/#$HOME/~}"

  if [[ "$pwd" == (#m)[/~] ]]; then
    _prompt_drt_pwd="$MATCH"
    unset MATCH
  else
    _prompt_drt_pwd="$pwd"
  fi
}

function prompt_drt_precmd {
  vcs_info

  sep=''
  rsep=''

  # Format PWD.
  prompt_drt_pwd
}

function comp_info {
  echo -n "%K{black}%F{blue} %n %f%k%K{blue}%F{black}$sep%f%k"
}

function prompt_drt_setup {
  setopt LOCAL_OPTIONS
  unsetopt XTRACE KSH_ARRAYS
  prompt_opts=(cr percent subst)

  # Load required functions.
  autoload -Uz add-zsh-hook
  autoload -Uz vcs_info

  # Add hook for calling git-info before each command.
  add-zsh-hook precmd prompt_drt_precmd

  zstyle ':vcs_info:*' enable git
  zstyle ':vcs_info:*' disable bzr cdv darcs mtn svk tla
  #zstyle ':vcs_info:*' check-for-changes true
  zstyle ':vcs_info:*' use-simple true
  zstyle ':vcs_info:*' unstagedstr ' %F{8}✗%f'
  zstyle ':vcs_info:*' formats '%F{red}%.2i%f%u%F{black}%b%f'
  zstyle ':vcs_info:*' actionformats '%F{red}%.7i%f +%a%u'
  zstyle ':vcs_info:git*+set-message:*' hooks git-status

  # Define prompts.
  PROMPT='$(comp_info)%K{blue}%F{black}${_prompt_drt_pwd}%f%k%F{blue}%f'
  RPROMPT='%F{blue}$rsep%f%K{blue}${vcs_info_msg_0_}%F{black}$rsep%f%k%F{yellow}[%D{%L:%M:%S %p}]%f'
  SPROMPT='zsh: correct %F{red}%R%f to %F{green}%r%f [nyae]?'
}

prompt_drt_setup "$@"

