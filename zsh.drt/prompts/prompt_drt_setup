#
# A simple theme that displays relevant, contextual information.
#
# Authors:
#   David Tomberlin
#
#

# Load dependencies.
pmodload 'helper'

function prompt_drt_precmd {
  vcs_info
}

function comp_info {
  echo -n "%F{white}%n %f"
}

function prompt_drt_pwd {
  cpwd="${PWD/#$HOME/~}"
  echo -n "%F{blue}$cpwd%f "
}

function prompt_drt_vcs {
  echo -n "${vcs_info_msg_0_} "
}

function prompt_drt_setup {
  setopt LOCAL_OPTIONS
  unsetopt XTRACE KSH_ARRAYS
  prompt_opts=(cr percent subst)

  # Load required functions.
  autoload -Uz add-zsh-hook
  autoload -Uz vcs_info

  # Add hook for calling git-info before each command.
  add-zsh-hook precmd prompt_drt_precmd

  zstyle ':vcs_info:*' enable git
  zstyle ':vcs_info:*' disable bzr cdv darcs mtn svk tla
  #zstyle ':vcs_info:*' check-for-changes true
  zstyle ':vcs_info:*' use-simple true
  zstyle ':vcs_info:*' unstagedstr ' %F{8}âœ—%f'
  zstyle ':vcs_info:*' formats '%F{red}%.2i%f%u%F{green}%b%f'
  zstyle ':vcs_info:*' actionformats '%F{red}%.7i%f +%a%u'
  zstyle ':vcs_info:git*+set-message:*' hooks git-status

  # Define prompts.
  PROMPT='$(comp_info)$(prompt_drt_pwd)'
  RPROMPT='$(prompt_drt_vcs)%B%F{yellow}[%D{%L:%M:%S %p}]%f%b'
  SPROMPT='zsh: correct %F{red}%R%f to %F{green}%r%f [nyae]?'
}

prompt_drt_setup "$@"

